<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:clipToPadding="false">

        <com.example.riley.piplace.BoardActivity.PlayBoard.BoardHolder
            android:id="@+id/board_holder"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center">


        </com.example.riley.piplace.BoardActivity.PlayBoard.BoardHolder>

        <RelativeLayout
            android:id="@+id/color_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="bottom"
            android:clipToPadding="false">

            <ImageView
                android:id="@+id/color_wheel"
                android:src="@drawable/color_wheel"
                android:background="@drawable/color_wheel"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="40dp"
                android:visibility="visible"
                android:scaleType="fitCenter"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:elevation="20dp"
                android:layout_alignBottom="@id/color_wheel">
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>